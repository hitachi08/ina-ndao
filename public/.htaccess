<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Redirect root / ke beranda.php
    RewriteRule ^$ beranda.php [L]

    # Hilangkan .php dari URL (misalnya /admin/Event)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}\.php -f
    RewriteRule ^(.*)$ $1.php [L]

    # Redirect otomatis ke versi tanpa .php
    RewriteCond %{THE_REQUEST} \s/([^.]+)\.php [NC]
    RewriteRule ^ %1 [R=301,L]

    # ===== Routing ke index.php (front controller) =====
    # Jika bukan file atau folder yang ada â†’ lempar ke index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [L]
</IfModule>
